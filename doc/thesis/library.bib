issn = {1053-8119},
keywords = {Algorithms,Bayes Theorem,Brain,Brain: physiology,Diagnostic Imaging,Humans,Likelihood Functions,Linear Models,Magnetic Resonance Imaging,Models, Neurological,Statistics as Topic,Statistics as Topic: methods,Tomography, Emission-Computed},
month = jun,
