journal = {Journal of cerebral blood flow and metabolism : official journal of the International Society of Cerebral Blood Flow and Metabolism},
keywords = {Bold Poststim,Brain,Brain: metabolism,Cerebrovascular Circulation,Female,Hemodynamics,Humans,Male,Oxygen Consumption,Photic Stimulation,Respiration},
number = {1},
